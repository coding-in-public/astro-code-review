---
import { twMerge } from "tailwind-merge";

type Props = {
  classes?: string;
};

const { classes } = Astro.props;
---

<div
  class={twMerge(
    "relative grid w-full gap-4 bg-gradient-to-r from-astro-800/20 from-0% via-astro-900/80 via-50% to-astro-800/20 to-100% before:absolute before:-bottom-1 before:left-1/4 before:right-1/4 before:-z-10 before:h-1 before:rounded-full before:bg-gradient-to-r before:from-astro-900 before:to-astro-900 before:blur-md sm:gap-6",
    classes
  )}
>
  <slot />
</div>
